<emailTemplate>
    <subject>
        <value>Example.com order confirmation</value>
    </subject>
    <htmlBody>
        <!-- Include the standard email header html file. -->
        <htmlFile relativePath="..\EmailContent\StandardEmailHeader.html" />
        
        <html>
            <table style="width:620px;margin-top:20px;margin-bottom:20px;">
                <tr>
                    <td style="padding:10px 10px 10px 10px;">
                        Hi *|FirstName|*,
                            
                        <br /><br />
                        Thank you for shopping with Example.com.
                                
                        <br /><br />
                        <p style="font-size:14px;font-weight:bold;">Your order details are as follows:</p>
                                
                        <br /><br />
                        *|ProductListHtml|*
                                
                        <br /><br />
                        <p style="font-size:14px;font-weight:bold;">Your invoice is attached.</p>
                    </td>
                </tr>
            </table>
        </html>
        
        <!-- Include the standard email footer html file. -->
        <htmlFile relativePath="..\EmailContent\StandardEmailFooter.html" />
    </htmlBody>
</emailTemplate>
